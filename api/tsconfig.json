{
  "compilerOptions": {
    "lib": [
      "es2023"
    ],
    "module": "ESNext",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "outDir": "./build"
  },
  "include": [
    "src/**/*",
    "@types/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "scripts"
  ]
}